<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:inputType="text"
        android:paddingStart="16dp"
        android:hint="Ведите имя"
        android:id="@+id/editText_name"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="322dp"
        android:layout_height="46dp"/>

    <EditText
        android:inputType="text"
        android:paddingStart="16dp"
        android:hint="Введите фамилию"
        android:id="@+id/editText_fuulName"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editText_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="322dp"
        android:layout_height="46dp"/>

    <EditText
        android:inputType="text"
        android:paddingStart="16dp"
        android:hint="Введите отчество"
        android:id="@+id/editText_nameName"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editText_fuulName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="322dp"
        android:layout_height="46dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/MaterialButtonNext"
        android:text="Next"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="122dp"
        android:layout_height="56dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>